<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a76.team.donationtracker">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginScreen"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/title_activity_welcome_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Temp"
            android:label="@string/title_activity_temp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistrationScreen"
            android:label="@string/title_activity_registration_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LocationsScreen"
            android:label="@string/title_activity_locations_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LocDetailScreen"
            android:label="@string/title_activity_loc_detail_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MenuScreen"
            android:label="@string/title_activity_menu_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DataEntryScreen"
            android:label="@string/title_activity_data_entry_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ItemListScreen"
            android:label="@string/title_activity_item_list_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ItemDetailScreen"
            android:label="@string/title_activity_item_detail_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchScreen"
            android:label="@string/title_activity_search_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategorySearchScreen"
            android:label="@string/title_activity_category_search_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>